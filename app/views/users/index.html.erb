<h1>all users</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>first name</th>
      <th>last name</th>
      <th>email address</th>
      <th>birthday</th>
      <th colspan='3'>controls</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email_address %></td>
        <td><%= user.birthday %></td>
        <td><%= link_to 'show', user, class: 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'edit', edit_user_path(user), class: 'btn btn-mini btn-warning' %></td>
        <td><%= link_to 'destroy', user, class: 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'new user', new_user_path, :class => 'btn btn-success' %>
